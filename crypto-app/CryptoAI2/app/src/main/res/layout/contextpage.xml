<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ContentActivity"
    android:background="#212121">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="place to imageview"
        android:textColor="#0D7377"
        android:layout_gravity="center"
        android:fontFamily="@font/anonymous_pro" />

    <EditText
        android:id="@+id/idEdtCurrency"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:focusable="auto"
        android:hint="Search Currency"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/idRVcurrency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idEdtCurrency"
        tools:listitem="@layout/currency_rv_item"
        android:layout_weight="5"/>

<!--    <ListView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:id="@+id/Listview"-->
<!--        android:backgroundTint="@color/white" />-->


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
             />

    <Button
        android:id="@+id/btngo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#0D7377"
        android:bottomLeftRadius="15dp"
        android:bottomRightRadius="15dp"
        android:fontFamily="@font/anonymous_pro"
        android:text="Log in"
        android:onClick="test"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:topLeftRadius="30dp"
        android:topRightRadius="30dp" />

    <Button
        android:id="@+id/become_a_client"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:text="Become a client"
        android:fontFamily="@font/anonymous_pro"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:onClick="become_a_client"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:backgroundTint="#0D7377"
        android:textSize="25dp" />


</LinearLayout>